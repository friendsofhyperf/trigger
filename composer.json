{
    "name": "friendsofhyperf/trigger",
    "description": "The MySQL Trigger component for Hyperf.",
    "type": "library",
    "require": {
        "hyperf/command": "~3.0.0",
        "hyperf/coordinator": "~3.0.0",
        "hyperf/di": "~3.0.0",
        "hyperf/event": "~3.0.0",
        "hyperf/process": "~3.0.0",
        "hyperf/utils": "~3.0.0",
        "moln/php-mysql-replication": "^1.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "hyperf/framework": "~3.0.0",
        "hyperf/redis": "~3.0.0",
        "hyperf/signal": "~3.0.0",
        "phpstan/phpstan": "^1.0",
        "swoole/ide-helper": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "FriendsOfHyperf\\Trigger\\": "src"
        }
    },
    "extra": {
        "hyperf": {
            "config": "FriendsOfHyperf\\Trigger\\ConfigProvider"
        },
        "branch-alias": {
            "dev-master": "4.0-dev"
        }
    },
    "suggest": {
        "hyperf/redis": "Required to use Redis client.",
        "hyperf/signal": "Required to use Signal manager."
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "license": "MIT",
    "authors": [{
        "name": "huangdijia",
        "email": "huangdijia@gmail.com"
    }],
    "scripts": {
        "cs-fix": "php-cs-fixer fix $1",
        "analyse": "phpstan analyse --memory-limit 300M -l 0 -c phpstan.neon ./src"
    }
}
